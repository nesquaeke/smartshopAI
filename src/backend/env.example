# Database Configuration
DATABASE_URL="postgresql://smartshop:password@localhost:5432/smartshop_ai"
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT=3000
API_PORT=3001
AI_PORT=8000

# Authentication & Security
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-here"
BCRYPT_ROUNDS=12

# External APIs - Polish Retailers
LIDL_API_KEY="your-lidl-api-key"
BIEDRONKA_API_KEY="your-biedronka-api-key" 
AUCHAN_API_KEY="your-auchan-api-key"
CENEO_API_KEY="your-ceneo-api-key"
ALLEGRO_CLIENT_ID="your-allegro-client-id"
ALLEGRO_CLIENT_SECRET="your-allegro-client-secret"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@smartshop-ai.com"

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="your-email@smartshop-ai.com"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="smartshop-ai-storage"

# Maps & Location Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Analytics & Monitoring
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-tracking-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# AI/ML Configuration
OPENAI_API_KEY="your-openai-api-key"
HUGGING_FACE_API_KEY="your-huggingface-key"

# Payment Processing
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Development Tools
LOG_LEVEL="debug"
ENABLE_CORS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

